# ===========================================
# ZFlow Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# cp .env.example .env
# ===========================================

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
PORT=7563
BACKEND_URL=http://localhost:7563
FRONTEND_URL=http://localhost:7564

# -------------------------------------------
# PostgreSQL
# -------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_USER=zflow
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=zflow
DB_PORT=7544

# -------------------------------------------
# Authentication (JWT)
# Generate with: openssl rand -hex 64
# -------------------------------------------
JWT_SECRET=change-me-in-production
JWT_REFRESH_SECRET=change-me-in-production

# -------------------------------------------
# Redis
# Generate with: openssl rand -hex 32
# -------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-me-in-production

# -------------------------------------------
# Limits
# -------------------------------------------
USER_LIMIT=10
CONNECTIONS_LIMIT=5

# -------------------------------------------
# Business Hours Sleep (milliseconds)
# -------------------------------------------
MIN_SLEEP_BUSINESS_HOURS=1000
MAX_SLEEP_BUSINESS_HOURS=3000

# -------------------------------------------
# Meta / WhatsApp Business API (FBL)
# -------------------------------------------
META_APP_ID=
META_APP_SECRET=
META_VERIFY_TOKEN=
META_CONFIG_ID=

# -------------------------------------------
# Deploy / Docker Swarm
# -------------------------------------------
DOMAIN=zflow.example.com
ACME_EMAIL=admin@example.com
# Generate with: htpasswd -nB admin
# Escape $ as $$ in .env files
TRAEFIK_DASHBOARD_AUTH=
REGISTRY=
TAG=latest

# -------------------------------------------
# Database Init (first deploy only)
# -------------------------------------------
RUN_MIGRATIONS=true
RUN_SEEDS=false
